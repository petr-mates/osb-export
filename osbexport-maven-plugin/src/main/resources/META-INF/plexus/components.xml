<component-set>
	<components>
		<component>
			<role>org.apache.maven.lifecycle.mapping.LifecycleMapping</role>
			<role-hint>osb-conf</role-hint>
			<implementation>
				org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping
			</implementation>
			<configuration>
				<phases>
					<compile>
						${project.groupId}:${project.artifactId}:${project.version}:compile
					</compile>
					<package>
						${project.groupId}:${project.artifactId}:${project.version}:package
					</package>
					<install>
						org.apache.maven.plugins:maven-install-plugin:2.3.1:install
					</install>
					<site>
            ${project.groupId}:osbsite-maven-plugin:${project.version}:export						
					</site>          
				</phases>
			</configuration>
		</component>
		<component>
			<role>org.apache.maven.artifact.handler.ArtifactHandler</role>
			<role-hint>osb-conf</role-hint>
			<implementation>
				org.apache.maven.artifact.handler.DefaultArtifactHandler
			</implementation>
			<configuration>
				<extension>jar</extension>
				<type>osb-conf</type>
				<packaging>osb-conf</packaging>
			</configuration>
		</component>
	</components>
</component-set>